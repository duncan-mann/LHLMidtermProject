<!--sidebar-->
<div class="d-flex" id="wrapper">
    <div class="border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Welcome <span> <strong><%= results[0].first_name %></strong></span>
      </div>
      <div class="list-group list-group-flush d-flex flex-column">
        <figure class="m-auto welcome border-bottom">
          <img src="https://picsum.photos/id/525/50" class="rounded-circle mx-auto">
          <form method="GET" action="/profile" id="profileForm">
            <a class="avatar-username" onclick="document.getElementById('profileForm').submit();">@<%= results[0].username %></a>
          </form>
        </figure>
        <form method="GET" action="/todos" class="list-group-item list-group-item-action border-0 d-flex">
          <button type="submit" class="sidebar-button mr-auto" id="dashboard">DASHBOARD</button>
          <i class="fa fa-home" aria-hidden="true"></i>
        </form>
        <form method="GET" action="/todos/eat" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto" id="eatButton">EAT</button>
          <i class="fa fa-cutlery" aria-hidden="true"></i>
        </form>
        <form method="GET" action="/todos/read" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto" id="readButton">READ</button>
          <i class="fa fa-book" aria-hidden="true"></i>
        </form>
        <form method="GET" action="/todos/watch" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto" id="watchButton">WATCH</button>
          <i class="fa fa-film" aria-hidden="true"></i>
        </form>
        <form method="GET" action="/todos/buy" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto" id="buyButton">BUY</button>
          <i class="fa fa-shopping-bag" aria-hidden="true"></i>
        </form>
        <form method="GET" action="/complete" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto" id="buyButton">COMPLETE</button>
        </form>
        <form id="logout" method="POST" action="/logout"
          class="list-group-item list-group-item-action border-0 d-flex mt-5">
          <button class="sidebar-button mr-auto" type="submit" id="logOut">Logout</button>
          <i class="fa fa-sign-out" aria-hidden="true"></i>
        </form>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->
