<!--sidebar-->
<div class="d-flex" id="wrapper">
    <div class="border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Welcome <span> <strong><%= results[0].first_name %></strong></span>
      </div>
      <div class="list-group list-group-flush d-flex flex-column">
          <form method="GET" action="/profile" id="profileForm" class="border-bottom mb-3">
            <figure class="m-auto welcome pb-3">
            <img src="https://pm1.narvii.com/5887/d0781c6f1e2b11600e991ca143f7500f58c7654e_hq.jpg" class="rounded-circle mx-auto avatar">
            <figcaption>@ <%= results[0].username %></figcaption>
          </form>
        </figure>
        <form id="dashboard" method="GET" action="/todos" class="list-group-item list-group-item-action border-0 d-flex">
          <button type="submit" class="sidebar-button mr-auto">DASHBOARD</button>
          <i class="fa fa-home" aria-hidden="true"></i>
        </form>
        <form id="eatButton" method="GET" action="/todos/eat" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto">EAT</button>
          <i class="fa fa-cutlery" aria-hidden="true"></i>
        </form>
        <form id="readButton" method="GET" action="/todos/read" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto">READ</button>
          <i class="fa fa-book" aria-hidden="true"></i>
        </form>
        <form id="watchButton" method="GET" action="/todos/watch" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto">WATCH</button>
          <i class="fa fa-film" aria-hidden="true"></i>
        </form>
        <form id="buyButton" method="GET" action="/todos/buy" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto">BUY</button>
          <i class="fa fa-shopping-bag" aria-hidden="true"></i>
        </form>
        <form method="GET" action="/completed" class="list-group-item list-group-item-action border-0 d-flex">
          <button class="sidebar-button mr-auto" id="buyButton">COMPLETE</button>
        </form>
        <form id="logout" method="POST" action="/logout"
          class="list-group-item list-group-item-action border-0 d-flex mt-5">
          <button class="sidebar-button mr-auto" type="submit">Logout</button>
          <i class="fa fa-sign-out" aria-hidden="true"></i>
        </form>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->
