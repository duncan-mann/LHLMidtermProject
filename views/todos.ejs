<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
    integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <link rel="stylesheet" href="styles/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Document</title>
</head>
<!--sidebar-->
<div class="d-flex" id="wrapper">
  <div class="border-right bg-white" id="sidebar-wrapper">
    <div class="sidebar-heading">Welcome <span> <strong><%= results[0].first_name %></strong></span>
    </div>
    <div class="list-group list-group-flush d-flex flex-column">
      <figure class="m-auto">
        <img src="https://picsum.photos/id/525/50" class="rounded-circle mx-auto">
        <figcaption>@<%= results[0].username %></figcaption>
      </figure>
      <form method="GET" action="/todos" class="list-group-item list-group-item-action border-0 d-flex">
        <button type="submit" class="sidebar-button mr-auto">DASHBOARD</button>
        <i class="fa fa-home" aria-hidden="true"></i>
      </form>
      <form method="GET" action="/todos/eat" class="list-group-item list-group-item-action border-0 d-flex">
        <button class="sidebar-button mr-auto">EAT</button>
        <i class="fa fa-cutlery" aria-hidden="true"></i>
      </form>
      <form method="GET" action="/todos/read" class="list-group-item list-group-item-action border-0 d-flex">
        <button class="sidebar-button mr-auto">READ</button>
        <i class="fa fa-book" aria-hidden="true"></i>
      </form>
      <form method="GET" action="/todos/watch" class="list-group-item list-group-item-action border-0 d-flex">
        <button class="sidebar-button mr-auto">WATCH</button>
        <i class="fa fa-film" aria-hidden="true"></i>
      </form>
      <form method="GET" action="/todos/buy" class="list-group-item list-group-item-action border-0 d-flex">
        <button class="sidebar-button mr-auto">BUY</button>
        <i class="fa fa-shopping-bag" aria-hidden="true"></i>
      </form>
      <form id="logout" method="POST" action="/logout" class="list-group-item list-group-item-action border-0 d-flex mt-5">
        <button class="button-logout sidebar-button mr-auto">Logout</button>
        <i class="fa fa-sign-out" aria-hidden="true"></i>
      </form>
    </div>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- topbar-->
  <div id="page-content-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-danger">
      <button class="btn btn-danger text-light" id="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i>
        TADA!</button>
      <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="btn text-light" id="addButton"><i class="fa fa-plus" aria-hidden="true"></i> Add</a>
        </li>
      </ul>
    </nav>

    <div class="container-fluid d-flex flex-row flex-wrap justify-content-around">

    <% for (let todo of results) { %>
      <% if (todo.complete === false) { %>
        <% if (todo.category === 'books') { %>
        <div class="alert alert-primary to-do m-3 d-flex justify-content-between align-items-center" role="alert" id="item<%= todo.id %>">
            <%= todo.description %>
            <i class="fa fa-book" aria-hidden="true"></i>
            <form method="GET" action="/editToDo/<%= todo.id %>">
              <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
            </form>
            <form method="POST" action="/completeToDoItem/<%= todo.id %>">
              <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
            </form>
          </div>
      <% } else if (todo.category === 'movies') { %>
        <div class="alert alert-success to-do m-3 d-flex justify-content-between align-items-center" role="alert" id="item<%= todo.id %>">
            <%= todo.description %>
            <i class="fa fa-film" aria-hidden="true"></i>
            <form method="GET" action="/editToDo/<%= todo.id %>">
              <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
            </form>
            <form method="POST" action="/completeToDoItem/<%= todo.id %>">
            <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
            </form>
          </div>
      <% } else if (todo.category === 'restaurant') { %>
        <div class="alert alert-warning to-do m-3 d-flex justify-content-between align-items-center" role="alert" id="item<%= todo.id %>">
            <%= todo.description %>
            <i class="fa fa-cutlery" aria-hidden="true "></i>
            <form method="GET" action="/editToDo/<%= todo.id %>">
              <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
            </form>
            <form method="POST" action="/completeToDoItem/<%= todo.id %>">
            <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
            </form>
          </div>
      <% } else if (todo.category === 'product') { %>
        <div class="alert alert-danger to-do m-3 d-flex justify-content-between align-items-center" role="alert" id="item<%= todo.id %>">
            <%= todo.description %>
            <i class="fa fa-shopping-bag" aria-hidden="true"></i>
            <form method="GET" action="/editToDo/<%= todo.id %>">
              <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
            </form>
            <form method="POST" action="/completeToDoItem/<%= todo.id %>">
            <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
            </form>
          </div>
     <% } %>
    <% } %>
  <% } %>

  </div>

  </div>

  <body>

    <div id="searchbox">
      <div class="d-flex justify-content-center h-100">
        <div class="searchbar">
            <span class="heart">â™¥</span>
            <form action="/testAPI" method="POST" name="toCategorize">
              <input class="search_input" type="text" name="input" placeholder="Add to your todo list">
              <button type="submit" name="type" value="search" class="search_icon"><i class="fa fa-search"></i></button>
            </form>
        </div>
      </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="../scripts/functions.js"></script>
  </body>

</html>
