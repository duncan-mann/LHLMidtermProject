    <script>
        window.onload = function () {
          Particles.init({
            selector: '.background-canvas',
            minDistance: 200,
            connectParticles: true,
            color: ['#66ffcc', '#ff99cc', '#ffcc66'],
            speed: 0.8,
            maxParticles: 50,
            responsive: [
              {
                breakpoint: 768,
                options: {
                  maxParticles: 80,
                  connectParticles: false,
                  color: ['#66ffcc', '#ff99cc', '#ffcc66'],
                }
              }
            ]
          })
        }
