<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
    integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/style.css" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Document</title>
</head>

<body>

  <% include ./partials/_sidebar %>
  <% include ./partials/_topbar %>

  <div class="container-fluid d-flex flex-row flex-wrap justify-content-around">
    <h1>CompletedItems page!</h1>
    <% for (let todo of results) { %>
    <% if (todo.complete === true) { %>
    <% if (todo.category === 'books') { %>
    <div class="alert alert-primary to-do m-3 d-flex justify-content-between align-items-center" role="alert"
      id="item<%= todo.id %>">
      <%= todo.description %>
      <i class="fa fa-book" aria-hidden="true"></i>
      <form method="GET" action="/editToDo/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
      </form>
      <form method="POST" action="/completeToDoItem/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
      </form>
    </div>
    <% } else if (todo.category === 'movies') { %>
    <div class="alert alert-success to-do m-3 d-flex justify-content-between align-items-center" role="alert"
      id="item<%= todo.id %>">
      <%= todo.description %>
      <i class="fa fa-film" aria-hidden="true"></i>
      <form method="GET" action="/editToDo/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
      </form>
      <form method="POST" action="/completeToDoItem/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
      </form>
    </div>
    <% } else if (todo.category === 'restaurant') { %>
    <div class="alert alert-warning to-do m-3 d-flex justify-content-between align-items-center" role="alert"
      id="item<%= todo.id %>">
      <%= todo.description %>
      <i class="fa fa-cutlery" aria-hidden="true "></i>
      <form method="GET" action="/editToDo/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
      </form>
      <form method="POST" action="/completeToDoItem/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
      </form>
    </div>
    <% } else if (todo.category === 'product') { %>
    <div class="alert alert-danger to-do m-3 d-flex justify-content-between align-items-center" role="alert"
      id="item<%= todo.id %>">
      <%= todo.description %>
      <i class="fa fa-shopping-bag" aria-hidden="true"></i>
      <form method="GET" action="/editToDo/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Edit</button>
      </form>
      <form method="POST" action="/completeToDoItem/<%= todo.id %>">
        <button type="submit" class="btn btn-outline-dark btn-sm">Done!</button>
      </form>
    </div>
    <% } %>
    <% } %>
    <% } %>

    <div id="searchbox">
      <div class="d-flex justify-content-center h-100">
        <div class="searchbar">
          <span class="heart">â™¥</span>
          <form action="/testAPI" method="POST" name="toCategorize">
            <input class="search_input" type="text" name="input" placeholder=" Add to your TADA list">
            <button type="submit" name="type" value="search" class="search_icon"><i class="fa fa-search"></i></button>
          </form>
        </div>
      </div>
    </div>

    <canvas class="background-canvas"></canvas>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
      integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
      crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"
      integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1"
      crossorigin="anonymous"></script>
    <script src="../scripts/functions.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.3/particles.min.js"></script>
    <script>
      window.onload = function () {
        Particles.init({
          selector: '.background-canvas',
          minDistance: 120,
          connectParticles: true,
          color: ['#cccc00', '#000066', '#cc0000'],
          speed: 0.8,
          maxParticles: 50,
          responsive: [
            {
              breakpoint: 768,
              options: {
                maxParticles: 120,
                color: ['#cccc00', '#000066', '#cc0000'],
                connectParticles: false
              }
            }
          ]
        })
      }
    </script>
</body>

</html>
