<!--sidebar-->
<% include ./partials/_sidebar %>
<% include ./partials/_topbar %>

<body>

  <div class="p-5">
    <h3 class="border-bottom font-weight-bold">Edit <%= toDoItem.description %></h3>
    <form method="POST" action="/editToDo/<%= toDoItem.id %>" id='editToDo'>
      <div class="row">
        <label for="toDoItem">Description</label>
        <input type="text" class="form-control" name="toDoItem">
      </div>
      <div class="row">
        <label for="category">Category</label>
        <select class="custom-select d-blocl w-100" name="category">
          <option value="movies">Movie</option>
          <option value="books">Book</option>
          <option value="restaurant">Restaurant</option>
          <option value="product">Product</option>
        </select>
        <button type="submit" class="btn btn-outline-primary mt-3">Submit</button>
      </div>
    </form>
  </div>

  <div id="searchbox">
    <div class="d-flex justify-content-center h-100">
      <div class="searchbar">
        <span class="heart">â™¥</span>
        <form action="/testAPI" method="POST" name="toCategorize">
          <input class="search_input" type="text" name="input" placeholder="Add to your todo list">
          <button type="submit" name="type" value="search" class="search_icon"><i class="fa fa-search"></i></button>
        </form>
      </div>
    </div>
  </div>


  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
    integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"
    integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1"
    crossorigin="anonymous"></script>
  <script src="../scripts/functions.js"></script>
</body>

</html>
